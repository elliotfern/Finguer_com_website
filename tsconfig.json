{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src/frontend/",
    "lib": ["es2017", "dom"],
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types", "src/frontend/types"]
  },
  "include": [
    "src/frontend",
    "src/frontend/types/global.d.ts",
    "src/frontend/types"
  ],
  "exclude": ["node_modules"]
}
